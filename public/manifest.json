{
	"manifest_version": 3,
	"name": "Bandcamp Play",
	"short_name": "BandPlay",
	"version": "9.0.0",
	"description": "Enhanced playback for Bandcamp & SoundCloud: autoplay, speed, pitch, hotkeys, history.",
	"homepage_url": "https://github.com/borbiuk/band-play",
	"host_permissions": [
		"https://bandcamp.com/*",
		"https://*.bandcamp.com/*",
		"https://soundcloud.com/discover*"
	],
	"permissions": ["tabs", "storage", "power"],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"js": ["vendor.js", "content.js"],
			"matches": [
				"https://bandcamp.com/*",
				"https://*.bandcamp.com/*",
				"https://soundcloud.com/discover*"
			],
			"run_at": "document_idle"
		}
	],
	"action": {
		"default_title": "Bandcamp Play settings",
		"default_popup": "./options.html",
		"default_icon": {
			"16": "assets/logo-16.png",
			"32": "assets/logo-32.png",
			"48": "assets/logo-48.png",
			"128": "assets/logo-128.png"
		}
	},
	"icons": {
		"16": "assets/logo-16.png",
		"32": "assets/logo-32.png",
		"48": "assets/logo-48.png",
		"128": "assets/logo-128.png"
	},
	"web_accessible_resources": [
		{
			"resources": ["assets/logo-128.png", "assets/nextprev.png"],
			"matches": [
				"https://bandcamp.com/*",
				"https://*.bandcamp.com/*",
				"https://soundcloud.com/*"
			]
		}
	]
}
